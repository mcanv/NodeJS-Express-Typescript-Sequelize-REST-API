{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./",
      "typeRoots": [
        "@types",
        "./node_modules/@types"
      ],
      "rootDirs": [
        "./",
      ],
      "strict": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "forceConsistentCasingInFileNames": true,
  },
  "exclude": [
    "node_modules",
  ],
}
